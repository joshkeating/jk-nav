{
  "manifest_version": 2,

  "name": "jk-nav",
  "description": "Allows the user to navigate defined webpages using keyboard shortcuts.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.3.1.min.js", "js/contentScript.js"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": ["jquery-3.3.1.min.js", "js/eventPage.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Change nav behavior for this site"
  }

}
